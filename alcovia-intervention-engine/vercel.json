{
	"version": 2,
	"builds": [
		{
			"src": "client/package.json",
			"use": "@vercel/static-build",
			"config": {
				"distDir": "dist"
			}
		},
		{
			"src": "server/api/index.js",
			"use": "@vercel/node",
			"config": {
				"includeFiles": [
					"server/src/**",
					"server/package.json"
				]
			}
		}
	],
	"routes": [
		{ "src": "/api/(.*)", "dest": "server/api/index.js" },
		{ "src": "/socket.io/(.*)", "dest": "server/api/index.js" },
		{ "handle": "filesystem" },
		{ "src": "/(.*)", "dest": "client/dist/index.html" }
	]
}
